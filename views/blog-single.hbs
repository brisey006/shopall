    <!-- Leave a Comment-->
    <form class="needs-validation modal fade" id="leaveComment" tabindex="-1" novalidate action="/blog/{{blog._id}}" method="post" enctype="multipart/form-data">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Leave a Comment</h4>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="review-name">Your Name</label>
                  <input class="form-control" type="text" id="review-name" name="fullname" required>
                  <div class="invalid-tooltip">Please enter your name!</div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="review-email">Avatar Image (optional)</label>
                  <input class="form-control" type="file" name="image" id="review-email">
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="review-message">Comment</label>
              <textarea name="comment" class="form-control" id="review-message" rows="8" required></textarea>
              <div class="invalid-tooltip">Please type your comment here!</div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-warning btn-block">Leave a Comment</button>
          </div>
        </div>
      </div>
    </form>

