			<div class="u-content">
				<div class="u-body">
					{{# if user.is_admin}}
					<h1 class="h2 font-weight-semibold mb-4">Shopall Users</h1>

					<div class="card mb-4">
						<header class="card-header">
							<h2 class="h3 card-header-title">Total Users: {{users.length}}</h2>
						</header>

						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-hover">
									<thead>
										<tr>
											<th scope="col">Full Name</th>
											<th scope="col">Date Joined</th>
											<th scope="col">Status</th>
											<th scope="col">Email Address</th>
											<th scope="col">Shop Status</th>
										</tr>
									</thead>

									<tbody>
										{{# each users }}
											<tr>
												<td>{{this.fullname}}</td>
												<td>{{this.date}}</td>
												<td>
													{{# if this.is_shop}}
														<span class="badge badge-warning m-0">Shop Owner</span>
													{{else}}
														<span class="badge badge-info m-0">Customer</span>
													{{/if}}
												</td>
												<td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
												{{# if this.is_shop}}
			                    <td><span class="badge badge-success m-0">Registered</span></td>
			                  {{else}}
			                    <td><a class="navi-link" href="/register_shop/{{this._id}}">Register</a></td>
			                  {{/if}}
											</tr>
										{{/each}}
									</tbody>
								</table>
							</div>
						</div>
					</div>
					{{else}}
					<h3>You're not an Admin</h3>
					{{/if}}
