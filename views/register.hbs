          <form class="needs-validation" method="post" action="/user/signup">
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="reg-fn">Full Name</label>
                  <input class="form-control" type="text" name="fullname" id="reg-fn">
                  <div class="invalid-feedback">Please enter your fullname name!</div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="reg-phone">Phone Number</label>
                  <input class="form-control" type="text" name="cell" id="reg-phone">
                  <div class="invalid-feedback">Please enter your phone number!</div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="reg-email">Country / Region</label>
                  <input class="form-control" type="text" name="country" id="reg-country">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="reg-phone">City</label>
                  <input class="form-control" type="text" name="city" id="reg-city">
                  <div class="invalid-feedback">Please enter your phone number!</div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="reg-zip">Zip Code</label>
                  <input class="form-control" type="text" name="zipcode" id="reg-zip-code">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="reg-phone">Physical Address</label>
                  <input class="form-control" type="text" name="address" id="reg-address">
                  <div class="invalid-feedback">Please enter your phone number!</div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="reg-email">E-mail Address</label>
                  <input class="form-control" type="email" name="email" id="reg-email">

                </div>
              </div>
              <div class="col-sm-6">
                <div class="row">
                  <div class="col-sm-8">
                    <div class="form-group">
                      <label for="reg-password">Password</label>
                      <input class="form-control" type="password" name="password" id="password">
                      <div class="invalid-feedback">Please enter password!</div>
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="custom-control custom-checkbox mt-4">
                      <input class="custom-control-input" type="checkbox" onclick="showPassword()" id="show-pd">
                      <label class="custom-control-label" for="show-pd">Show Password</label>
                    </div>
                  </div>
                </div>
                <script>
										function showPassword() {
											var password = document.getElementById("password");

											if (password.type === "password") {
												password.type = "text";
											}
											else {
												password.type = "password";
											}
										}
									</script>
