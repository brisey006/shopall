        <!-- Profile Settings-->
        <div class="col-lg-8 pb-5">
          <form class="row" method="post" action="/edit-product/{{product._id}}">
            <div class="col-md-6">
              <div class="form-group">
                <label for="name">Product Name</label>
                <input class="form-control" type="text" id="name" name="name" value="{{product.name}}" placeholder="Product Name" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="Price">Product Price (USD)</label>
                <input class="form-control" type="text" id="price" name="price" value="{{product.price}}" placeholder="price e.g 100" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="Price Cut">Price Cut (optional)</label>
                <input class="form-control" type="text" id="price_cut" name="price_cut" value="{{product.price_cut}}" placeholder="price cut">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="Discount">Product Discount (optional)</label>
                <input class="form-control" type="text" id="discount" name="discount" value="{{product.discount}}" placeholder="e.g 12.34">
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="Condition">Product Condition</label>
                <select class="form-control" name="condition">
                  <option value>choose condition</option>
                  <option value="New">New Product</option>
                  <option value="Second Hand">Second Hand</option>
                </select>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="Category">Product Category</label>
                <select class="form-control" name="category">
                  <option value>choose category</option>
                  <option value="Women's Clothing">Women's Clothing</option>
                  <option value="Men's Clothing">Men's Clothing</option>
                  <option value="Boys' Clothing">Boys' Clothing</option>
                  <option value="Girls' Clothing">Girls' Clothing</option>
                  <option value="Baby Products">Baby Products</option>
                  <option value="Computers & Accessories">Computers & Accessories</option>
                  <option value="Food & Groceries">Food & Groceries</option>
                  <option value="Tv, Video & Audio">Tv, Video & Audio</option>
                  <option value="Smartphones & Tablets">Smartphones & Tablets</option>
                  <option value="Cameras, Photo & Video">Cameras, Photo & Video</option>
                  <option value="Headphones">Headphones</option>
                  <option value="Electronics">Electronics</option>
                  <option value="Software">Software</option>
                  <option value="Video Games">Video Games</option>
                  <option value="Toys & Games">Toys & Games</option>
                  <option value="Beauty & Personal Care">Beauty & Personal Care</option>
                  <option value="Books">Books</option>
                  <option value="Stationary">Stationary</option>
                  <option value="Furniture & Homewares">Furniture & Homewares</option>
                  <option value="Home & Kitchen">Home & Kitchen</option>
                  <option value="Industrial & Scientific">Industrial & Scientific</option>
                  <option value="Alcohol">Alcohol</option>
                  <option value="Arts & Crafts">Arts & Crafts</option>
                  <option value="Health & Household">Health & Household</option>
                  <option value="Tools & Garden">Tools & Garden</option>
                  <option value="Sports & Outdoor">Sports & Outdoor</option>
                  <option value="Media House">Media House</option>
                  <option value="Farming">Farming</option>
                  <option value="Bags & Luggage">Bags & Luggage</option>
                  <option value="Shoes">Shoes</option>
                  <option value="Services">Services</option>
                  <option value="Jewellery">Jewellery</option>
                  <option value="Others">Others</option>
                </select>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="Product Description">Product Description</label>
                <textarea class="form-control" id="description" name="description" placeholder="Enter your description here" rows="8">{{product.description}}</textarea>
              </div>
            </div>

            <div class="col-md-12">
              <div class="form-group">
                <label for="Specifications">Product Specifications (optional)</label>
                <textarea class="form-control" type="text" id="specs" name="specs" placeholder="e.g #spec1 #spec2" rows="5">{{# each product.specs}}{{# if this}}#{{this}}{{/if}}{{/each}}</textarea>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="Features">Product Features (optional)</label>
                <textarea class="form-control" type="text" id="features" name="features" placeholder="e.g #feature1 #feature2" rows="5">{{# each product.features}}{{# if this}}#{{this}}{{/if}}{{/each}}</textarea>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="Shipping">Product Shipping & Delivery Options (optional)</label>
                <textarea class="form-control" type="text" id="shipping" name="shipping" placeholder="e.g #opt1 #opt2" rows="5">{{# each product.shipping}}{{# if this}}#{{this}}{{/if}}{{/each}}</textarea>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
