        @media screen and (max-width: 479px){
          .hidden-small-screen{
            display: none;
          }
        }

        @media only screen
        and (min-device-width : 768px)
        and (max-device-width : 1024px)
        and (orientation : landscape) { .hidden-small-screen{
          display: none;
        }}

        @media only screen
        and (min-device-width : 768px)
        and (max-device-width : 1024px)
        and (orientation : portrait) { 	.hidden-small-screen{
            display: none;
          }}

        @media only screen
          and (min-device-width: 768px)
          and (max-device-width: 1024px)
          and (min-width: 1006)
          and (max-width: 899px)
          and (min-width: 768px)
          and (-webkit-min-device-pixel-ratio: 1) {
            .hidden-large-screen{
              display: none;
            }
          }

          @media screen
          and (min-device-width: 1200px)
          and (max-device-width: 1600px)
          and (-webkit-min-device-pixel-ratio: 1) {
            .hidden-large-screen{
              display: none;
            }
        }
    </style>
