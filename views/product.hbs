                  <i class="fe-icon-star"></i><i class="fe-icon-star"></i><i class="fe-icon-star"></i>
                {{/if}}
                {{# if this.three}}
                  <i class="fe-icon-star active"></i><i class="fe-icon-star active"></i>
                  <i class="fe-icon-star active"></i><i class="fe-icon-star"></i><i class="fe-icon-star"></i>
                {{/if}}
                {{# if this.four}}
                  <i class="fe-icon-star active"></i><i class="fe-icon-star active"></i>
                  <i class="fe-icon-star active"></i><i class="fe-icon-star active"></i><i class="fe-icon-star"></i>
                {{/if}}
                {{# if this.five}}
                  <i class="fe-icon-star active"></i><i class="fe-icon-star active"></i>
                  <i class="fe-icon-star active"></i><i class="fe-icon-star active"></i><i class="fe-icon-star active"></i>
                {{/if}}
              </div>
            </div>
            <p>{{this.review}}</p>
            <footer class="testimonial-footer">
              <div class="testimonial-avatar">
                <img {{# if this.image}} src="../../uploads/{{this.image}}" {{else}} src="../../assets/zero.svg" {{/if}} style="object-fit:cover" alt="Review Author Avatar"/>
              </div>
              <div class="d-table-cell align-middle pl-2">
                <div class="blockquote-footer">{{this.fullname}}
                  <cite>{{this.date}}</cite>
                </div>
              </div>
            </footer>
          </div>
          {{/each}}
          {{else}}
          <p class="font-weight-bold" style="font-size:18px">No Product Reviews</p>
         {{/if}}
        </div>
      </div>
    </div>
