                  <div class="progress-bar bg-warning" role="progressbar" style="width: {{r1}}%;" aria-valuenow="{{r1}}" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
              <div class="pt-3">
                <a class="btn btn-warning btn-block" href="#" data-toggle="modal" data-target="#leaveReview">Leave a Review</a>
              </div>
            </div>
          </div>
        </div>

        <div class="col-xl-8 col-md-6 pb-5 mb-3">
        {{# if reviews}}
          <div class="d-flex flex-wrap justify-content-between pb-2">
            <p class="font-weight-bold" style="font-size:18px">Latest Reviews</p>
            <a class="btn btn-primary btn-sm" href="#" data-toggle="modal" data-target="#reviews">View All ({{product.review_count}}) Reviews</a>
          </div>
          <!-- Review-->
          {{# each reviews_quick}}
          <div class="blockquote comment mb-4">
            <div class="d-sm-flex mb-2">
              <p class="text-md font-weight-bold mb-0">{{this.topic}}</p><span class="d-none d-sm-inline mx-3 text-muted opacity-50">|</span>
              <div class="rating-stars">
                {{# if this.one}}
                  <i class="fe-icon-star active"></i><i class="fe-icon-star"></i>
                  <i class="fe-icon-star"></i><i class="fe-icon-star"></i><i class="fe-icon-star"></i>
                {{/if}}
                {{# if this.two}}
