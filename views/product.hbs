                    <i class="fe-icon-star active"></i><i class="fe-icon-star active"></i><i class="fe-icon-star active"></i>
                  {{/if}}
                </div>
              </div>
              <p>{{this.review}}</p>
              <footer class="testimonial-footer">
                <div class="testimonial-avatar">
                  <img {{# if this.image}} src="../../uploads/{{this.image}}" {{else}} src="../../assets/zero.svg" {{/if}} style="object-fit:cover" alt="Review Author Avatar"/>
