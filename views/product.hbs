    <!-- Leave a Review-->
    <form class="needs-validation modal fade" id="leaveReview" tabindex="-1" novalidate action="/product/{{product._id}}" method="post" enctype="multipart/form-data">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Leave a Review</h4>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="review-name">Your Name</label>
                  <input class="form-control" type="text" id="review-name" name="fullname" required>
                  <div class="invalid-tooltip">Please enter your name!</div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="review-email">Avatar Image (optional)</label>
                  <input class="form-control" type="file" name="image" id="review-email">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="review-subject">Subject</label>
                  <input name="topic" class="form-control" type="text" id="review-subject" required>
                  <div class="invalid-tooltip">Please enter review subject!</div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="review-rating">Rating</label>
                  <select name="rating" class="form-control" id="review-rating" required>
                    <option value>Choose rating...</option>
                    <option value="5">5 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="2">2 Stars</option>
                    <option value="1">1 Star</option>
                  </select>
                  <div class="invalid-tooltip">Please choose from 1 to 5!</div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="review-message">Review</label>
              <textarea name="review" class="form-control" id="review-message" rows="8" required></textarea>
              <div class="invalid-tooltip">Please type your review here!</div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-warning btn-block">Leave a Review</button>
          </div>
        </div>
      </div>
    </form>

    <form class="modal fade" id="reviews" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">All Product Reviews ({{reviews.length}})</h4>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
          <div class="modal-body">
            {{# each reviews}}
            <div class="blockquote comment mb-4">
              <div class="d-sm-flex mb-2">
                <h6 class="text-lg mb-0">{{this.topic}}</h6>
                <span class="d-none d-sm-inline mx-3 text-muted opacity-50">|</span>
                <div class="rating-stars">
                  {{# if this.one}}
                    <i class="fe-icon-star active"></i><i class="fe-icon-star"></i>
                    <i class="fe-icon-star"></i><i class="fe-icon-star"></i><i class="fe-icon-star"></i>
